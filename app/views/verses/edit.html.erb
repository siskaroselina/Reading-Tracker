<% provide(:title, "Edit verse") %>
<h1>Update your verse</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@verse) do |f| %>

      <%= f.label :id %>
      <%= f.text_field :id, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    </div>
  </div>
